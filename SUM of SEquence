class People:
  def school(self,N,c):
    while(N!=1):
        
        if N%2==0:
            c=c+N
            N=N/2
        else:
            c=c+N
            N=3*N+1
    print(int((c%(10**9+7)+1))) 
T=int(input())
for i in range(T):
  N=int(input())
  c=0
  if N!=1:
    p1 = People()
    p1.school(N,c)
  else:
    print(N)
    
