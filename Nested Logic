d,m,y=map(int,input().split())
d1,m1,y1 = map(int,input().split())
if(y<=y1):
    if(m<=m1):
        if(d<=d1):
            print('0')
        else:
            b=15*(d-d1)
            print(b)
    else:
        if (y1>y):
            print('0')
        else:
            b=500*((m-m1))
            print(b)
else:
    print('10000')


